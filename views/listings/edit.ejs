<%- layout("/layout/boilerplate") %>
<body>
    <h1>Create New Listing</h1><br><br>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="http://localhost:8080/listings/<%= content._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title : </label><br>
                <input type="text" value="<%= content.title %>" name="Listing[title]" class="form-control" required>
                <div class="valid-feedback">
                    ok! setteled with a better name
                </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label><br>
                <textarea name="Listing[description]" required rows="3" cols="30" class="form-control"><%= content.description %></textarea>
                <div class="valid-feedback">
                    Great Description
                </div>
                <div class="invalid-feedback">
                    Description up there!!!
                </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image : </label><br>
                <input type="text" src="" alt="" name="Listing[image][url]" value="<%= content.image.url %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price : </label><br>
                <input type="number" value="<%= content.price %>" name="Listing[price]" required class="form-control">
                <div class="valid-feedback">
                    Good Price!!!
                </div>
                <div class="invalid-feedback">
                    Enter a valid price!!
                </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country : </label><br>
                <input type="text" value="<%= content.country %>" name="Listing[country]" class="form-control" required class="form-control">
                <div class="valid-feedback">
                    Country ame is Detected!!
                </div>
                <div class="invalid-feedback">
                    You have entered invalid country name!!
                </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location : </label><br>
                <input type="text" value="<%= content.location %>" name="Listing[location]" required class="form-control">
                <div class="valid-feedback">
                    oK!!
                </div>
                <div class="invalid-feedback">
                    Enter a valid Location name!!!!
                </div>
                </div>
                <button class="btn btn-dark add-btn">Update</button><!--SENDED DATA IN BULK SOMEHOW IN ARRAY FORMAT-->
            </form>
        </div>
        </div>
</body>